{
  "name": "@hyperwatch/express-logger",
  "description": "Express.js middleware to log HTTP requests to Hyperwatch.",
  "license": "Apache-2.0",
  "author": "Fran√ßois Hodierne <francois@hodierne.net>",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperwatch/express-logger.git"
  },
  "version": "3.1.0",
  "main": "index.js",
  "scripts": {
    "depcheck": "depcheck",
    "lint": "eslint '**/*.js'",
    "lint:fix": "eslint '**/*.js' --fix",
    "prettier": "prettier \"**/*.@(js|json|md|yml)\"",
    "prettier:check": "npm run prettier -- --check",
    "prettier:write": "npm run prettier -- --write"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "syslog-client": "^1.1.1",
    "ws": "^8.2.2"
  },
  "devDependencies": {
    "depcheck": "^1.3.1",
    "eslint": "^7.16.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^4.3.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.2.1",
    "prettier-package-json": "^2.1.3"
  },
  "depcheck": {
    "ignores": [
      "prettier-package-json"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,yml}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
